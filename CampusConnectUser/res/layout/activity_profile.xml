<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/profile_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button_bg_color">

        <com.example.campusconnect.CircleImageView
            android:id="@+id/profile_logo"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:padding="3dp"
            android:src="@drawable/montclair"
            app:border_color_new="#c1c1c1"
            app:border_width_new="4dp" />

        </RelativeLayout>

    <View
        android:id="@+id/white_color_view"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="@android:color/white"
        android:layout_below="@+id/profile_image_layout">
        </View>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/white_color_view">

    <LinearLayout
        android:id="@+id/profile_info_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/blured"
        >

        <TextView
            android:id="@+id/etFirstName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:text="First Name"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_name"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c1c1c1"
            >
        </View>

        <TextView
            android:id="@+id/etLastName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:text="Last Name"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_name"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c1c1c1"
            >
        </View>

        <TextView
            android:id="@+id/etEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:text="Email"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_email"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c1c1c1"
            >
        </View>

        <TextView
            android:id="@+id/etMobile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:text="Mobile"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_mobile"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c1c1c1"
            >
        </View>

        <TextView
            android:id="@+id/etTermOfUse"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:text="Terms Of Use"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:onClick="onClick"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_terms"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c1c1c1"
            >
        </View>

        <TextView
            android:id="@+id/etPrivacyPolicy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:text="Privacy Policy"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:onClick="onClick"
            android:textSize="22sp"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_privacy"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:onClick="onClick"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background_storke"
            android:maxHeight="38dp"
            android:textStyle="bold"
            android:text="Return Home"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            />

        </LinearLayout>
    </ScrollView>



</RelativeLayout>